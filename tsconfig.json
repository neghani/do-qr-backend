{
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "types": ["node", "jest", "express"],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "moduleResolution": "Node",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "sourceMap": true,
    "outDir": "dist/",
    "strictNullChecks": true
  }
}
